# Configuration d'environnement pour FotoLouJay Backend
# Copier ce fichier vers .env et renseigner les valeurs

# Base de données
DATABASE_URL="mysql://username:password@localhost:3306/fotoloujay"

# JWT et authentification
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Configuration serveur
PORT=3001
NODE_ENV="development"

# Upload et fichiers
MAX_FILE_SIZE=2097152
ALLOWED_FILE_TYPES="image/jpeg,image/png"
UPLOAD_DIR="uploads"

# Configuration sécurité photos
SECURITY_LEVEL="strict"
ALLOW_ONLY_CAMERA_CAPTURE=true
MAX_PHOTOS_PER_PRODUCT=5

# Firebase/Cloudinary (optionnel pour stockage cloud)
# CLOUDINARY_CLOUD_NAME=""
# CLOUDINARY_API_KEY=""
# CLOUDINARY_API_SECRET=""

# FIREBASE_PROJECT_ID=""
# FIREBASE_PRIVATE_KEY=""
# FIREBASE_CLIENT_EMAIL=""

# Configuration email (pour notifications)
# SMTP_HOST=""
# SMTP_PORT=587
# SMTP_USER=""
# SMTP_PASS=""

# Logs
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# CORS
CORS_ORIGIN="http://localhost:4200"